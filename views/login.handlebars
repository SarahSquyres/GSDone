<form class="login-form">
  <section class="title">
    <h1>Login</h1>
  </section>
  <div class="form-group container-fluid">
    <label for="inputUsername">Username</label>
    <input type="form-input" class="form-control" id="inputUsername" placeholder="Enter Username">
  </div>
  <div class="form-group container-fluid">
    <label for="inputPassword">Password</label>
    <input type="password" class="form-control" id="inputPassword" placeholder="Password">
    <small id="passwordHelp" class="form-text text-muted">Never share your password.</small>
    <button type="submit" class="btn btn-secondary btn-sm">Submit</button>
  </div>
</form>

<form class="sign-up-form">
  <section class="title">
    <h1>Sign-Up</h1>
  </section>
  <div class="form-group container-fluid">
    <label for="signUpUsername">Username</label>
    <input type="form-input" class="form-control" id="signUpUsername" placeholder="Enter Username">
  </div>
  <div class="form-group container-fluid">
    <label for="signUpPassword">Password</label>
    <input type="password" class="form-control" id="signUpPassword" placeholder="Password">
    <small id="passwordHelp" class="form-text text-muted">Never share your password.</small>
  </div>
  <div class="form-group container-fluid">
    <label class="lead fw-normal mb-1" for="inputFirstName">First Name</label>
    <input type="form-input" class="form-control" id="signUpFirst" placeholder="Enter Username">
  </div>
  <div class="form-group container-fluid">
    <label for="inputLastName">Last Name</label>
    <input type="form-input" class="form-control" id="signUpLastName" placeholder="Enter Last Name">
  </div>
  <div class="form-group container-fluid">
    <label for="inputBio">Bio</label>
    <input type="form-input" class="form-control" id="signUpBio" placeholder="Enter Bio">
    <small id="bioHelp" class="form-text text-muted">Enter a description. Other users will see this.</small>
    <button type="submit" class="btn btn-secondary btn-sm">Submit</button>
  </div>
</form>

<script src="./js/login.js"></script>